<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.2-ea"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libra.ptcgt.ptcgtool.Controller">
    <Tab text="Search Cards">
        <SplitPane dividerPositions="0.8" prefHeight="261.0" prefWidth="465.0">
            <VBox prefHeight="200.0" prefWidth="100.0">
                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="264.0" spacing="20.0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <TextField fx:id="searchField" promptText="i.e : Lugia"/>
                    <Button onAction="#search" text="Search"/>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="498.0" prefWidth="637.0" spacing="100.0">
                    <ImageView fx:id="cardImage" disable="true" fitHeight="150.0" fitWidth="115.0"
                               mouseTransparent="true" pickOnBounds="true" preserveRatio="true"
                               style="-fx-scale-x: 3; -fx-scale-y: 3; -fx-translate-x: 0; -fx-translate-y: 0;">
                        <effect>
                            <Blend/>
                        </effect>
                    </ImageView>
                    <VBox alignment="CENTER" prefHeight="498.0" prefWidth="203.0" spacing="20.0">
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add"
                                visible="false"/>
                        <Button fx:id="removeButton" mnemonicParsing="false" text="Remove"
                                visible="false"/>
                    </VBox>
                </HBox>
            </VBox>
            <ListView fx:id="cardListView"/>
        </SplitPane>
    </Tab>
    <Tab text="DeckBuilder">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <SplitPane dividerPositions="0.8" orientation="VERTICAL" prefHeight="572.0" prefWidth="800.0">
                <SplitPane dividerPositions="0.29797979797979796" prefHeight="160.0" prefWidth="200.0">
                    <VBox>
                        <ListView/>
                        <ListView/>
                        <ListView/>
                    </VBox>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                        <HBox prefHeight="457.0" prefWidth="559.0">
                            <ImageView fitHeight="448.0" fitWidth="334.0" pickOnBounds="true"
                                       preserveRatio="true"/>
                            <VBox prefHeight="457.0" prefWidth="221.0">
                                <Button mnemonicParsing="false" text="Button"/>
                                <Button mnemonicParsing="false" text="Button"/>
                            </VBox>
                        </HBox>
                    </AnchorPane>
                </SplitPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0"/>
            </SplitPane>
        </AnchorPane>
    </Tab>
</TabPane>
