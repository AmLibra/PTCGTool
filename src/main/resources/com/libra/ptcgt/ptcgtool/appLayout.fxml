<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<TabPane fx:id="tabPane"
        onKeyPressed="#handleKeyPressed" prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" xmlns:fx="http://javafx.com/fxml" fx:controller="com.libra.ptcgt.ptcgtool.Controller">
    <Tab text="Search Cards">
        <SplitPane dividerPositions="0.8" prefHeight="261.0" prefWidth="465.0">
            <VBox prefHeight="200.0" prefWidth="100.0">
                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="264.0" spacing="20.0">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <TextField fx:id="searchField" promptText="i.e : Lugia" />
                    <Button onAction="#search" text="Search" />
               <CheckBox fx:id="toggleStandard" mnemonicParsing="false" text="Search Only in Standard" />
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="498.0" prefWidth="637.0">
                    <AnchorPane prefHeight="498.0" prefWidth="465.0">
                        <ImageView fx:id="cardImage" disable="true" fitHeight="150.0" fitWidth="115.0" layoutX="298.0"
                                   layoutY="174.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true"
                                   style="-fx-scale-x: 3; -fx-scale-y: 3; -fx-translate-x: -130; -fx-translate-y: 0;">
                            <effect>
                                <Blend/>
                            </effect>
                        </ImageView>
                        <Label fx:id="statusDisplayLabel" alignment="CENTER" layoutX="-15.0" layoutY="169.0"
                               prefHeight="160.0" prefWidth="347.0" style="-fx-translate-x: 170;"
                               text="Welcome ! Try to look something up !" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Button layoutX="14.0" layoutY="486.0" mnemonicParsing="false" onAction="#clearCache"
                                text="Clear Cache"/>
                    </AnchorPane>
                    <VBox alignment="CENTER" prefHeight="498.0" prefWidth="203.0" spacing="20.0">
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add" visible="false" />
                        <Button fx:id="removeButton" mnemonicParsing="false" text="Remove" visible="false" />
                    </VBox>
                </HBox>
            </VBox>
            <ListView fx:id="cardListView" />
        </SplitPane>
    </Tab>
    <Tab fx:id="deckBuilderTab" text="DeckBuilder">
        <fx:include source="deckBuilderTab.fxml"/>
    </Tab>
</TabPane>
