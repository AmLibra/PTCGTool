<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libra.ptcgt.ptcgtool.Controller">
   <tabs>
      <Tab text="Search Cards">
         <content>
            <SplitPane dividerPositions="0.2" prefHeight="261.0" prefWidth="465.0">
               <items>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                     <children>
                         <Button onAction="#search" text="Search" />
                        <TextField fx:id="searchField" promptText="i.e : Lugia" />
                     </children>
                  </VBox>
                  <ListView fx:id="lView" />
               </items>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </SplitPane>
         </content>
      </Tab>
      <Tab text="Deck Manager">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>
      <Tab text="Deck Stats">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>
   </tabs>
</TabPane>
